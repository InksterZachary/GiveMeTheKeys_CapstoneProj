@model GMTK_Capstone.ViewModels.ListingAddressViewModel

@{
    ViewData["Title"] = "MyProperties";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<body class="text-center">
    <h1>My Properties</h1>

    <div>
        <hr />
        <div class="row flex-lg-wrap">
            @foreach (var item in Model.Listings)
             {
                <div class="col-md-3" style="padding-top:2%;">
                    <div class="flex">
                        <div class="px-3">
                            <div class="bg-white shadow-xl rounded-lg overflow-hidden">
                                <div class="p-4">
                                    <div class="flex justify-content-center">
                                        <img class="card" style="max-height:100%; max-width:100%;" src="~/images/@item.ListingMainPhoto" />
                                    </div>
                                </div>
                                <div class="">
                                    <ul>
                                        <li>Type: @item.HomeType</li>
                                        <li>Area: @item.SqareFootage sqft</li>
                                        <li>Rent: $@item.PricePoint</li>
                                        <li>Bathrooms: @item.Baths</li>
                                        <li>Bedrooms: @item.Beds</li>
                                    </ul>
                                </div>
                                <div class="px-4 pt-3 pb-4 ">
                                    <div style="text-decoration:solid;">Realtor:</div>
                                    <div class="flex items-center pt-2">
                                       <div>
                                            <p>@Model.Landlord.FirstName @Model.Landlord.LastName</p>
                                            <p>@Model.Landlord.PhoneNumber</p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
             }
        </div>
    </div>
    <div>
        @Html.ActionLink("CreateListing", "CreateListing"@*, new { id = Listing.Id }*@) |
        <a asp-action="Index">Back to List</a>
    </div>
</body>