@model GMTK_Capstone.ViewModels.LandlordRenterViewModel

@{
    ViewData["Title"] = "ViewRenterApplicants";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<body>
    @if (Model.AppliedRenters != null)
    {
        <h4>@Model.Listing.ListingName Applicants</h4>
        <div>
            <hr />
            <div class="row flex-lg-wrap">
                @foreach (var item in Model.AppliedRenters)
                 {
                    <div class="flex">
                        <div class="px-3">
                            <div style="background-color:#f7f6e7;" class="shadow-xl rounded-lg overflow-hidden">
                                <div class="p-4">
                                    <div class="flex justify-content-center">
                                        <img class="card" style="max-height:100%; cursor:pointer; max-width:100%;" src="~/images/@item.ProfileImage" />
                                    </div>
                                </div>
                                <div>
                                    <ul style="text-align:left;">
                                        <li>Attributes: @item.TraitMatch</li>
                                    </ul>
                                </div>
                                <div class="px-4 pt-3 pb-4 ">
                                    <div style="text-decoration:underline; border-top:solid;border-top-color:antiquewhite;">Realtor</div>
                                    <div class="flex items-center pt-2">
                                        <div>
                                            <p>@item.FirstName @item.LastName <br />Phone: @item.PhoneNumber<br />Email: @item.Email</p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            @if (@item.IsVerified == false)
                            {
                                <p style="color:red; font-size:small;">NOT VERIFIED</p>
                            }
                            else
                            {
                                <p style="color:red; font-size:small;">IS VERIFIED</p>
                            }
                        </div>
                    </div>
                 }
            </div>
        </div>
        <div>
            @Html.ActionLink("CreateListing", "CreateListing") |
            <a asp-action="MyProperties">Back</a>
        </div>
    }
    else
    {
        <div class="text-center">
            <h1>There are currently no applicants for this listing. <br /><a href="/Landlords/MarketingTips">Click Here</a> for some marketing strategies.</h1>
        </div>
        <div style="padding-top:23rem;">
            @Html.ActionLink("CreateListing", "CreateListing") |
            <a asp-action="Index">Back</a>
        </div>
    }
</body>
