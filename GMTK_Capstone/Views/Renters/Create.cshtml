@model GMTK_Capstone.ViewModels.RenterAddressViewModel

@{
    ViewData["Title"] = "Create";
    List<string> states = (List<string>)ViewData["states"];
    Layout = "~/Views/Shared/_RenterLayout.cshtml";
}

<h1>Create</h1>

<h4>RenterAddressViewModel</h4>
